<%= link_to(notifications_path) do %>
  <% if unchecked_notifications.any? %>
    <span class = 'fa-stack'>
      <i class="fa fa-bell-o fa-lg fa-stack-2x" style="font-size: 1.5em;"  aria-hidden="true"></i>
      <i class = 'fa fa-circle n-circle fa-stack-1x' aria-hidden = 'true'></i>.
    </span>
  <% else %>
  <i class="fa fa-bell-o fa-lg fa-stack-2x" style="font-size: 1.5em;"  aria-hidden="true"></i>
  <% end %>
<% end %>